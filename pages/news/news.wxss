.indexContainer{
  flex: auto;
}

.header{
  height: 300rpx;
  width: 100%;
}
.nav{
  height: 100rpx;
  width: 100%;
  display: flex;
  margin: 100rpx,10rpx,10rpx,10rpx;
  background-color: #10aeb5;
}
.item{
  height: 70rpx;
	margin-left: 60rpx;
  text-align: center;
  padding-top: 25rpx;
  color: white;
}
.itemSelect{
  height: 70rpx;
	margin-left: 60rpx;
  text-align: center;
  padding-top: 25rpx;
  color: white;
