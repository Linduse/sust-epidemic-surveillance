/* pages/policydetail/policydetail.wxss */
.cityPolicy {
  width: auto;
  min-height: 300rpx;
  height: auto;
  margin: 20rpx 20rpx 20rpx 20rpx;
  background-color: #fff;
  border-radius: 5rpx;
  padding: 20rpx;
  box-shadow: 3rpx 3rpx 3rpx 3rpx rgb(216, 209, 209);
}
.section {
  width: 100%;
  min-height: 100%;
  height: auto;
  background-color: #eee;
  flex: auto;
  word-wrap:break-word; 
  padding: 1rpx;
}
.policyTitle {
  font-weight: bolder;
  font-size: 40rpx;
  margin-bottom: 10rpx;
}
.policyContext {
  line-height: 45rpx;
  letter-spacing: 3rpx;
}
.phoneContext {
  display: flex;
  margin: 10rpx 0 10rpx 0;
  height: auto;
  min-height: 30rpx;
}
.trafficTitle {
  font-size: 40rpx;
  font-weight: bolder;
}
.nav {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  margin-bottom: 40rpx;
}
.item {
  border-radius: 10rpx;
  background-color: #eee;
  text-align: center;
  width: 18%;
  height: 55rpx;
  line-height: 55rpx;
}
.active {
  background-color: rgb(2, 10, 126);
  color: white;
}
