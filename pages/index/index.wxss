
/*轮播图区域*/
.banners {
  width: 100%;
  height: 400rpx;
}
.banners image {
  width: 100%;
  height: 100%;
}

.serach{
  float: left;
}

/*图标导航区域*/
/* 五个图标导航区域 */
.navContainer {
  display: flex;
}
.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
}
.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background: rgb(240, 19, 19);
  font-size: 50rpx;
  color: #fff;
  margin: 20rpx 0;
}
/*热门影集区域*/
.header {
  padding-bottom: 40rpx;
}
.recommendContainer{
  margin: 40rpx,0;
}
.header .title {
  font-size: 32rpx;
  line-height: 80rpx;
  color: #666;
}
.header .more {
  float: right;
  border: 1rpx solid #333;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
  margin-top: 10rpx;
}
.pictureContainer{
  display: flex;
  flex-wrap: wrap;
}
.scrollItem{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.scrollItem image{
  width: 375rpx;
  height: 75%;
  display: flex;
  height: 450rpx;
  margin-top: 30rpx;
}
.scrollItem text{
  font-size: 40rpx;
  background: rgba(43, 158, 173, 0.267);
}

