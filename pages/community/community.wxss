.contain {
  width: 100%;
  height: auto;
  background-color: #eee;
  flex: auto;
  word-wrap:break-word; 
  /* word-break:break-all;  */
}
.header {
  width: 100%;
  height: 250rpx;
  font-size: 40rpx;
  font-weight: bolder;
  text-align: center;
  line-height: 120rpx;
  /* margin: auto; */
  background-image: linear-gradient(to top,rgb(66, 88, 161),rgb(8, 48, 179));
  
}
.query {
  width: auto;
  min-height: 300rpx;
  height: auto;
  background-color: #fff;
  position: absolute;
  top: 120rpx;
  right: 20rpx;
  left: 20rpx;
  border-radius: 20rpx;
  text-align: center;
  padding: 0 40rpx;
  display: flex;
  
}